pipeline {
    agent any

    environment {
        PATH_SERVER = "server"
        DOCKER_REGISTRY_URL = "hgthaii/server:latest"
        DOCKER_IMAGE_NAME = "server"
        NODE_VERSION = "14.21.2"
    }

    stages {
        stage("Checkout") {
            steps {
                echo "Clone source về Jenkins"
                git "https://github.com/hgthaii/finder.git"
            }
        }

        stage("Build") {
            steps {
                dir("${PATH_SERVER}") {
                    bat "start /B \"npm install node@${NODE_VERSION}\""
                    bat "start /B \"npm install\""
                    bat "start /B \"npm run format\""
                }
            }
        }
        stage("Test") {
            steps {
                bat "start /B \"node -v\""
                bat "start /B \"npm -v\""
            }
        }
        // stage("Build and push Docker image") {
        //     agent {
        //         docker { image "${DOCKER_REGISTRY_URL}"}
        //     }
        //     steps {
        //         dir("${PATH_SERVER}") {
        //             echo "Build docker image"
        //             sh "docker build -t ${DOCKER_REGISTRY_URL} ."
        //             echo "Push image lên Dockerhub"
        //             sh "docker push ${DOCKER_REGISTRY_URL}"
        //         }
        //     }
        // }
    }
}
